{
  "name": "hktech-ai-gateway",
  "version": "1.0.0",
  "description": "HKTECH AI Gateway - OpenClaw Runtime",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start:gateway": "pm2 start ecosystem.config.js",
    "restart:gateway": "pm2 restart hktech-ai --update-env",
    "stop:all-gateways": "pm2 delete all && npm run start:gateway",
    "logs:gateway": "pm2 logs hktech-ai",
    "infra:sync": "bash scripts/infra-auto-sync.sh",
    "infra:restart": "pm2 restart hktech-ai --update-env",
    "infra:health": "curl -s http://127.0.0.1:3001/api/system/status | grep 'status' || echo 'Gateway health check FAILED.'",
    "infra:clean": "pm2 delete all && npm run infra:sync",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.3.3"
  }
}
